<!DOCTYPE html>
<html>

<head>
    <title>Admin</title>

    <%- include layout/head %>
</head>

<body>

    <div class="container">
        <%- include layout/nav %>

            <div class="row" style="margin-bottom: 10px;">
                <div class="col-md-12">
                    <a href="/admin/new" class="btn btn-success pull-right"> Add new Post </a>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Posts
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Author</th>
                                    <th>Create Time</th>
                                    <th>Update Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data){%>
                                    <% for(var i = 0; i < data.length; i++){%>
                                        <tr>
                                            <td>
                                                <%= data[i]._id%>
                                            </td>
                                            <td>
                                                <%= data[i].title%>
                                            </td>
                                            <td>
                                                <%= data[i].content%>
                                            </td>
                                            <td>
                                                <%= data[i].author%>
                                            </td>
                                            <td>
                                                <%= data[i].created_at%>
                                            </td>
                                            <td>
                                                <%= data[i].updated_at%>
                                            </td>
                                            <td>
                                                <a href="/admin/edit/<%= data[i]._id%>" class="btn btn-primary"> Edit </a>
                                                <button class="btn btn-danger post_delete" post_id="<%= data[i]._id%>"> Delete </button>
                                            </td>
                                        </tr>
                                        <%}%>
                                            <%}%>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>

    <script type="text/javascript" src="/static/js/post.js"></script>
</body>

</html>