<!DOCTYPE html>
<html>

<head>
    <title></title>
    <%- include layout/head %>

        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: 'textarea'
            });
        </script>
</head>

<body>
    <div class="container">
        <%- include layout/nav %>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit Post
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" method="" action="">
                                <input class="id" type="hidden" name="id" value="<%= data._id%>">

                                <div class="form-group">
                                    <label>Title</label>
                                    <input class="form-control title" name="title" placeholder="Title" value="<%= data.title%>">
                                </div>
                                <div class="form-group">
                                    <label>Content</label>
                                    <textarea class="form-control" name="content" placeholder="Content"><%= data.content%></textarea>
                                </div>
                                <div class="form-group">
                                    <label>Author</label>
                                    <input class="form-control author" name="author" placeholder="Author" value="<%= data.author%>">
                                </div>

                                <input type="button" name="" value="Edit" class="btn btn-success post_edit" />
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>

    <script type="text/javascript" src="/static/js/post.js"></script>

</body>

</html>